<body>

    <div class="row d-flex justify-content-center">
        <div class="col-3">
            <div class="form-group">
                <label for="exampleInputEmail1">Name:</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label for="exampleInputPassword1">Email:</label>
                <input type="email" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label for="exampleInputEmail1">Phone:</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
        </div>
    </div>
    
    <div class="row d-flex justify-content-center">
        <div class="col-1"> <button type="submit" class="btn btn-primary">Submit</button></div>
    </div>
  
 


     <div class="row text-center">
        <div class="col"> <p>Select Date and Time to submit the appointment.</p></div>
    </div>

 
    <div class="row d-flex justify-content-center">
        <!-- <div class="col-2"> <input  class="form-control" id="date" type="datetime-local"/></div> -->
        <div class="col-2"> <input  class="form-control" id="date" type="datetime-local"/></div>
        <% if (type == 1) { %>
            <div class="col-1"><button type="button" class="btn btn-primary" onclick="myFunction()">Submit</button></div>
        <%} else if (type == 2) { %>
            <div class="col-1"><button type="button" class="btn btn-success" onclick="myFunction()">Submit</button></div>

        <%} else if (type == 3) { %>
            <div class="col-1"><button type="button" class="btn btn-danger" onclick="myFunction()">Submit</button></div>

        <%} else if (type == 4) { %>
            <div class="col-1"><button type="button" class="btn btn-warning" onclick="myFunction()">Submit</button></div>

        <%} else if (type == 5) { %>
            <div class="col-1"><button type="button" class="btn btn-info" onclick="myFunction()">Submit</button></div>
        
        <%} else if (type == 6) { %>
            <div class="col-1"><button type="button" class="btn btn-light" onclick="myFunction()">Submit</button></div>
        
        <%} else if (type == 7) { %>
            <div class="col-1"><button type="button" class="btn btn-dark" onclick="myFunction()">Submit</button></div>
        <%} else if (type == 8) { %>
            <div class="col-1"><button type="button" class="btn btn-link" onclick="myFunction()">Submit</button></div>
        <%} else if (color) { %>
            <div class="col-1"><button type="button" class="btn" style="background-color: #<%= btnc %>;color:#<%= color %>" onclick="myFunction()">Submit</button></div>
        <% } %>
    </div>
   
    <div class="row text-center">
        <div class="col"> <small>Powered by: Divyanshu Kalola</small></div>
    </div>


         

<script>
    async function myFunction() {



        // ************** working **************
        var details = {
            "guestID": "6390edd8734fd58f91c5e666",
            "location": "Chicago, IL",
            "time": document.getElementById("date").value,
        };

        var formBody = [];
        for (var property in details) {
        var encodedKey = encodeURIComponent(property);
        var encodedValue = encodeURIComponent(details[property]);
        formBody.push(encodedKey + "=" + encodedValue);
        }
        formBody = formBody.join("&");

        fetch('http://localhost:3000/api/appointment?apiKey=<%= apiKey %>', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8'
        },
        body: formBody
        })
}
 
</script>
